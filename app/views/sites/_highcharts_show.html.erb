<script type="text/javascript" charset="utf-8">

  $(function() {
    new Highcharts.Chart({
      chart: {renderTo: "URLs"},
      title: {text: "Insight Scores"},
      xAxis: {
        type: "datetime",
        dateTimeLabelFormats: {
          month: '%e. %b',
          year: '%b'
        },
      },
      yAxis: {title: {text: "(n/100)"}, min: 0, max: 100 },
      series: [
        {
          name: 'Mobile Speed',
          data: [<% @site.webstats.each do |stat| %>
            <%= "[Date.UTC(" + stat.pull_date.getlocal.months_ago(1).strftime("%Y, %m, %e") + ")," + stat.mobile_score.to_s + "]," %>
            <% end %>]
        }, {
          name: 'Mobile UX',
          data: [<% @site.webstats.each do |stat| %><%= "[Date.UTC(" + stat.pull_date.getlocal.months_ago(1).strftime("%Y, %m, %e") + ")," + stat.mobile_usability.to_s + "]," %><% end %>]
        }, {
          name: 'Desktop Speed',
          data: [<% @site.webstats.each do |stat| %><%= "[Date.UTC(" + stat.pull_date.getlocal.months_ago(1).strftime("%Y, %m, %e") + ")," + stat.desktop_score.to_s + "]," %><% end %>]
        }],
    });
  });

  $(function() {
    new Highcharts.Chart({

      chart: {
        renderTo: "Guage",
        type: 'gauge',
        plotBackgroundColor: null,
        plotBackgroundImage: null,
        plotBorderWidth: 0,
        plotShadow: false
      },

      title: {
        text: ' '
      },

      pane: {
        startAngle: -150,
        endAngle: 150,
        background: [{
          backgroundColor: {
            linearGradient: {x1: 0, y1: 0, x2: 0, y2: 1},
            stops: [
              [0, '#FFF'],
              [1, '#333']
            ]
          },
          borderWidth: 0,
          outerRadius: '109%'
        }, {
          backgroundColor: {
            linearGradient: {x1: 0, y1: 0, x2: 0, y2: 1},
            stops: [
              [0, '#333'],
              [1, '#FFF']
            ]
          },
          borderWidth: 1,
          outerRadius: '107%'
        }, {
          // default background
        }, {
          backgroundColor: '#DDD',
          borderWidth: 0,
          outerRadius: '105%',
          innerRadius: '103%'
        }]
      },

      // the value axis
      yAxis: {
        min: 0,
        max: 1000,

        minorTickInterval: '0',
        minorTickWidth: 1,
        minorTickLength: 10,
        minorTickPosition: 'inside',
        minorTickColor: '#666',

        tickPixelInterval: 30,
        tickWidth: 2,
        tickPosition: 'inside',
        tickLength: 10,
        tickColor: '#666',
        labels: {
          step: 2,
          rotation: 'auto'
        },
        title: {
          text: 'milliseconds'
        },
        plotBands: [{
          from: 0,
          to: 300,
          color: '#609b61' // green
        }, {
          from: 300,
          to: 600,
          color: '#F9BF3B' // yellow
        }, {
          from: 600,
          to: 1000,
          color: '#b25241' // red
        }]
      },

      series: [{
        name: 'Load Time',
        data: [<%= @site.load_time %>],
        tooltip: {
          valueSuffix: 'ms'
        }
      }]
    });
  });

</script>
