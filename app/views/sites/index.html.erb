<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {renderTo: "URLs"},
      title: {text: "Mobile Speed Score"},
      xAxis: {type: "datetime"},
      yAxis: {title: {text: "(n/100)"}},
      series:
        [{
          name: 'URLs' ,
          pointInterval: <%= 1.day * 1000 %>,
          pointStart: <%= 3.weeks.ago.to_i * 1000 %>,
          data: <%= 21.times.map{ Random.rand(100) } %>
        }],
    });
  });
</script>

<div id="URLs" align:center; ></div>

<hr>

<div class="page-header">
  <%= link_to new_site_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Site
  <% end %>
  <h1>Your Sites</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>URL</th>
      <th>Mobile Speed</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Dest</th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @sites) do |site| %>
      <td><%= site.url %></td>
      <td><%= '## n/100 (from API)' %></td>
      <td><%= link_to 'Show', site %></td>
      <td><%= link_to 'Edit', edit_site_path(site) %></td>
      <td><%= link_to 'Destroy', site, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tbody>
  </table>
</div>
