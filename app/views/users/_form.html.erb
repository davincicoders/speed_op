<%= form_for(@user) do |form| %>
  <div class="form-group">
  <p>
    <%= form.label :name, 'First Name' %><br>
    <%= form.text_field :name, :placeholder => "ex. John" %>
    </div>
  </p>
  <div class="form-group">
  <p>
    <%= form.label :last_name, 'Last Name' %><br>
    <%= form.text_field :last_name, :placeholder => "ex. Doe" %>
  </p>
    </div>
  <div class="form-group">
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, :placeholder => "ex. jd@example.com" %>
  </p>
    </div>
  <% if @user.omniauth? %>
    <%= form.hidden_field :omniauth %>
  <% else %>
    <div class="form-group">
    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password, :placeholder => "min. 8 characters" %>
    </p>
      </div>
    <div class="form-group">
    <p>
      <%= form.label :password_confirmation, 'Confirm' %><br>
      <%= form.password_field :password_confirmation, :placeholder => "confirm" %>
    </p>
      </div>
  <% end %>
  <%= form.submit 'Signup', class: 'btn btn-primary' %>
<% end %>
